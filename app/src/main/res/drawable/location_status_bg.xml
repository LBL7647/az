<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 浅色底色，和左侧蓝牙卡片的浅色背景对应 -->
    <solid android:color="#E8F5E9" />
    <!-- 绿色边框，宽度和左侧蓝牙卡片的边框一致 -->
    <stroke
        android:width="1dp"
        android:color="#4CAF50" />
    <!-- 圆角半径和左侧一致，实现圆润效果 -->
    <corners android:radius="18dp" />
</shape>