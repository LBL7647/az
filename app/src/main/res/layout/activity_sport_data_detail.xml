<?xml version="1.0" encoding="utf-8"?>
<!-- 户外骑行数据详情页面主布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 页面标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="户外骑行数据详情"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- 时速统计栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="时速（千米/时）"
            android:textColor="#7B68EE"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_speed_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="平均 19.0   最快 34.4"
            android:textSize="14sp"
            android:textColor="#666666"/>
    </LinearLayout>

    <!-- 时速图表容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="30dp"
        android:padding="0dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical">
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart_speed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp"/>
    </LinearLayout>

    <!-- 海拔统计栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="海拔高度（米）"
            android:textColor="#FF6B35"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_altitude_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="累计爬升 51"
            android:textSize="14sp"
            android:textColor="#666666"/>
    </LinearLayout>

    <!-- 海拔图表容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="30dp"
        android:padding="0dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical">
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart_altitude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp"/>
    </LinearLayout>

</LinearLayout>
