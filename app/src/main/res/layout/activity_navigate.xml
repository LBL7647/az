<?xml version="1.0" encoding="utf-8"?>
<!-- 导航页面主布局 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3F5">

    <!-- 高德地图视图 -->
    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 起点终点输入卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 输入区域垂直布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp">

            <!-- 起点输入行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 起点标识点 -->
                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/shape_dot_green"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="从"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"/>

                <!-- 起点输入框容器 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">

                    <!-- 起点输入框 -->
                    <EditText
                        android:id="@+id/et_start"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="输入起点位置"
                        android:textColor="#333333"
                        android:textColorHint="#CCCCCC"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"/>

                    <!-- 选择当前位置作为起点 -->
                    <ImageView
                        android:id="@+id/btn_select_start"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        app:tint="#666666"
                        android:padding="2dp"
                        android:background="?attr/selectableItemBackgroundBorderless"/>
                </LinearLayout>

                <!-- 起点搜索按钮 -->
                <ImageView
                    android:id="@+id/btn_search_start"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#2196F3"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <!-- 连接分隔线 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="3.5dp"/>
            </LinearLayout>

            <!-- 终点输入行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 终点标识点 -->
                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/shape_dot_red"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"/>

                <!-- 终点输入框容器 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">

                    <!-- 终点输入框 -->
                    <EditText
                        android:id="@+id/et_end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="输入终点位置"
                        android:textColor="#333333"
                        android:textColorHint="#CCCCCC"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"/>

                    <!-- 选择当前位置作为终点 -->
                    <ImageView
                        android:id="@+id/btn_select_end"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        app:tint="#666666"
                        android:padding="2dp"
                        android:background="?attr/selectableItemBackgroundBorderless"/>
                </LinearLayout>

                <!-- 终点搜索按钮 -->
                <ImageView
                    android:id="@+id/btn_search_end"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#2196F3"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 我的位置按钮卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_my_location"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/card_input"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 我的位置按钮 -->
        <ImageView
            android:id="@+id/btn_my_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:padding="5dp"
            android:src="@drawable/ic_my_dw"
            app:tint="#6C707E"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </androidx.cardview.widget.CardView>

    <!-- 底部导航控制卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 底部控制区域布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <!-- 导航模式选择行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导航模式"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="15sp"/>

                <!-- 导航模式单选组 -->
                <RadioGroup
                    android:id="@+id/rg_navi_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <!-- 模拟导航选项 -->
                    <RadioButton
                        android:id="@+id/rb_emulator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="模拟"
                        android:buttonTint="#2196F3"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <!-- 实时GPS导航选项 -->
                    <RadioButton
                        android:id="@+id/rb_gps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="实时GPS"
                        android:buttonTint="#2196F3"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>

            <!-- 开始导航按钮 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_start_navi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_navigate_gradient"
                android:text="开始导航"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:elevation="2dp"
                android:stateListAnimator="@null"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
